<nav class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-between">
  <a class="navbar-brand mx-2" href="/flats">Simple Airbnb</a>
  <%= link_to 'Add flat', new_flat_path, class: 'btn btn-primary mx-3' %>
</nav>
</div>
<h1>All our Flats</h1> <br>


<div class="container">
  <% @flats.each do |flat| %>
    <div class="card align-items-center col-sm-3 mb-3 mx-1 mb-sm-0 ">
      <img src="..." class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-name"><%= flat.name %></h5>
        <p class="card-address"><%= flat.address %></p>
          <p><%= flat.price_per_night %></p>
          <p><%= flat.number_of_guests %></p>
        <%= link_to 'More info', flat, class: 'btn btn-info' %>
        <%= link_to 'Edit', edit_flat_path(flat), class: 'btn btn-warning' %>
        <%= link_to 'Remove', flat, method: :delete, data: { confirm: 'Are you sure ?' }, class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>
</div>
